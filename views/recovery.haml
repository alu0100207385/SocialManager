.container-full
  .row
    .col-lg-12.text-center.v-center
      .row
        %h1 Account recovery
      .row{:style=>"padding-top:20px;margin-top: 50px;"}
        %form{:action=>"/recuperarn", :method=>"POST", :name=>"input", :role=>"form",:style=>"text-align:center margin-top:50px;margin-left: 200px;"}
          .row
            %label{:for => "nickname"}* Please enter your nickname and we'll email recovery:
            %input.form-control{:name => "nickname", :type => "text", :required => "required",:placeholder => "yournickname", :style => "width:20%; display:inline;"}
            %button.btn.btn-primary.btn-md{:style => "width:14%; display:inline;"} Send
      .row{:style=>"padding-top:20px;"}
        %form{:action=>"/recuperarm", :method=>"POST", :name=>"input", :role=>"form",:style=>"text-align:center;margin-top:50px;"}
          .row
            %label{:for => "mail"}* If you do not remember your nickname, enter your email where you signed up:
            %input.form-control{:name => "mail", :type => "email", :required => "required",:placeholder => "youremail@email.com",:style => "position:relative;width:25%; display:inline;"}
            %button.btn.btn-primary.btn-md{:style => "width:12%; display:inline;"} Send
      .row{:style=>"padding-top:100px;"}
        %a.btn.btn-primary.btn-md.center-block{:href => "/", :style => "width:10%;"} Back
